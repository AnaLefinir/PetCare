@using System.Web.Razor.Generator
@{
    ViewBag.Title = "Dashboard";
}

@section Styles{
}

<div class="page-header">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Dashboard</h2>
    </div>
</div>
<div class="main">
    <h2>Hi DarkAdmin!</h2>

    <h3> What do you want to do today? </h3>

    <section class="index">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="statistic-block block">
                        <div class="d-flex align-items-end justify-content-between">
                            <div class="title center">
                                <a href="@Url.Action("Create","Pets")"><div class="icon"><img src="~/Content/images/PawWhite.png" /></div><strong class="add">Add Pet</strong></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="statistic-block block">
                        <div class=" d-flex align-items-end justify-content-between">
                            <div class="title center">
                                <div class="icon"><img src="~/Content/images/OwnerWhite.png" /></div><strong class="add">Add Owner</strong>
                            </div>
                        </div>
                    </div>
                </div>
                @if (ViewBag.IsAdmin)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="statistic-block block">
                            <div class="d-flex align-items-end justify-content-between">
                                <div class="title center">
                                    @if (ViewBag.Theme == "white")
                                    {
                                        var veterinayImg = Url.Content("~/Content/images/001-doctor.png");
                                    }
                                    else
                                    {
                                        var veterinayImg = Url.Content("~/Content/images/veterinarian.png");
                                    }
                                    <a href="@Url.Action("Index", "Login")">
                                        <div class="icon">
                                            <img src="~/Content/images/@veterinaryImg" alt="image" />
                                        </div>
                                        <div>
                                            <strong class="add">Add Doctor</strong>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

</div>

