@using System.Web.Razor.Generator
@{
    ViewBag.Title = "Dashboard";
}

@section Styles{
}

<div class="page-header">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Dashboard</h2>
    </div>
</div>
<div class="main">
    <div class="text">
        <h2>Hi PetCare's Admin!</h2>
        <h3> What do you want to do today? </h3>
    </div>
    <section class="index">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="statistic-block block">
                        <div class="d-flex align-items-end justify-content-between">
                            <div class="title center">
                                @{
                                    var petImg = Url.Content("~/Content/images/paw-white.svg");

                                    if (ViewBag.Theme.Equals("white"))
                                    {
                                        petImg = Url.Content("~/Content/images/paw-black.svg");
                                    }
                                }
                                <a href="@Url.Action("Create", "Pets")">
                                    <div class="icon">
                                        <img src="@petImg" alt="imagePet" />
                                    </div><strong class="add">Add Pet</strong>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="statistic-block block">
                        <div class=" d-flex align-items-end justify-content-between">
                            <div class="title center">
                                @{
                                    var ownerImg = Url.Content("~/Content/images/dog-in-front-of-a-man-white.svg");

                                    if (ViewBag.Theme.Equals("white"))
                                    {
                                        ownerImg = Url.Content("~/Content/images/dog-in-front-of-a-man-black.svg");
                                    }
                                }
                                <a href="@Url.Action("Create", "Owners")">
                                    <div class="icon">
                                        <img src=@ownerImg alt="imageOwner" />
                                    </div>
                                    <div>
                                        <strong class="add">Add Owner</strong>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                @if (true)
                {
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="statistic-block block">
                            <div class="d-flex align-items-end justify-content-between">
                                <div class="title center">
                                    @{
                                        var veterinaryImg = Url.Content("~/Content/images/veterinarian-white.svg");

                                        if (ViewBag.Theme.Equals("white"))
                                        {
                                            veterinaryImg = Url.Content("~/Content/images/veterinarian-black.svg");
                                        }
                                    }
                                    <a href="@Url.Action("Create", "Vets")">
                                        <div class="icon">
                                            <img src="@veterinaryImg" alt="imageVet" />
                                        </div>
                                        <div>
                                            <strong class="add">Add Vet</strong>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="statistic-block block">
                            <div class="d-flex align-items-end justify-content-between">
                                <div class="title center">
                                    @{
                                        var speciesImg = Url.Content("~/Content/images/species-white.svg");

                                        if (ViewBag.Theme.Equals("white"))
                                        {
                                            speciesImg = Url.Content("~/Content/images/species-black.svg");
                                        }
                                    }
                                    <a href="@Url.Action("Create", "Species")">
                                        <div class="icon">
                                            <img src="@speciesImg" alt="imageSpecies" />
                                        </div>
                                        <div>
                                            <strong class="add">Add Species</strong>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <canvas id="myIncomeChart" width="400" height="400"></canvas>
                </div>
                <div class="col-lg-6">
                    <canvas id="mySpeciesChart" width="400" height="400"></canvas>
                </div>
            </div>
        </div>
    </section>
</div>


@section Scripts
{
    @Scripts.Render("~/bundles/chart")
    @Scripts.Render("~/bundles/home")
}

<script>
    var incomeChartData = {
        type: 'bar',
        data: {
            labels: ["January", "February", "March", "April"],
            datasets: [
                {
                    label: 'Income',
                    data: [12, 19, 3, 5],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)'
                    ],
                    borderWidth: 1
                }
            ]
        },
        options: {
            scales: {
                yAxes: [
                    {
                        ticks: {
                            beginAtZero: true
                        }
                    }
                ]
            }
        }
    };

    var speciesChartData = {
        type: 'pie',
        data: {
            labels: ["Cat", "Dog", "Lemur", "Rat"],
            datasets: [
                {
                    label: 'Species',
                    data: [38, 22, 20, 20],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)'
                    ]
                }
            ]
        },
        options: {
            responsive: true
        }
    };
</script>