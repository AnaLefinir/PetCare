@model PetCareApp.ModelView.MedicalHistory.MedicalHistoryModel

@{
    Model.Visits = Model.Visits.OrderByDescending(v => v.TimeStamp).ToList();
}

<div class="col-lg-6">
    <div class="block">
        <div class="title"><strong>Visit history</strong></div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Visits)
                {
                    <tr>
                        <td>@item.TimeStamp.ToShortDateString()</td> 
                        <td><a href="@Url.Action("EditVisit", "MedicalHistory", new { id=item.Id })">@Html.DisplayFor(modelItem => item.Title)</a></td>
                        <td><a href="@Url.Action("DeleteVisit", "MedicalHistory", new {id = item.Id, petId = Model.PetId})">X</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>