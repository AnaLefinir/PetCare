@model PetCareApp.ModelView.MedicalHistory.MedicalHistoryModel


<div class="col-lg-6">
    <div class="block">
        <div class="title"><strong>Visit history</strong></div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Visits)
                {
                    <tr>
                        <td><a href="@Url.Action("EditVisit", "MedicalHistory", new { id=item.Id })">@item.TimeStamp.ToShortDateString()</a></td> <!-- TODO: pasar solo la fecha!! -->
                        <td><a href="@Url.Action("EditVisit", "MedicalHistory", new { id=item.Id })">@Html.DisplayFor(modelItem => item.Title)</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>