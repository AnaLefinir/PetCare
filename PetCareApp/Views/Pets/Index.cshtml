@model IEnumerable<PetCareApp.Models.Pet>


<div>
    <div class="form-group row">       
        <div class="col-lg-2 offset-8">
            <input style="cursor:pointer" value="Create New" type="button" onclick="location.href='@Url.Action("Create", "Pets")'" class="btn btn-primary">
        </div>
    </div>
    <div class="block">
        <div class="title"><strong>List of Pets</strong></div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Birthdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <img style="cursor:pointer" onclick="location.href='@Url.Action("Edit","Pets", new { id = item.ID })'" src="~/Content/img/003-edit.png"/> |
                        <img style="cursor:pointer" onclick="location.href='@Url.Action("Details","Pets", new { id = item.ID })'" src="~/Content/img/DetailPink.png" /> | 
                        <img style="cursor:pointer" onclick="location.href='@Url.Action("Delete","Pets", new { id = item.ID })'" src="~/Content/img/rubbish-bin.png" />
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


