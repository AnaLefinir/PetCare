@model IEnumerable<PetCareApp.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="form-group row">
        <div class="col-lg-2 offset-8">
            <input style="cursor:pointer" value="Create New" type="button" onclick="location.href='@Url.Action("Create", "Users")'" class="btn btn-primary">
        </div>
    </div>
    <div class="block">
        <div class="title"><strong>List of Owners</strong></div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            <img style="cursor: pointer" onclick="location.href = '@Url.Action("Edit", "Users", new {id = item.ID})'" src="~/Content/img/003-edit.png" /> |
                            <img style="cursor: pointer" onclick="location.href = '@Url.Action("Details", "Users", new {id = item.ID})'" src="~/Content/img/DetailPink.png" /> |
                            <img style="cursor: pointer" onclick="location.href = '@Url.Action("Delete", "Users", new {id = item.ID})'" src="~/Content/img/rubbish-bin.png" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
